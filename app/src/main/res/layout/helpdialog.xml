<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="4dp" >

    <TextView
        style="@style/NormalText"
        android:id="@+id/helpText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="none"
        android:text="" />

    <TextView
        style="@style/NormalText"
        android:id="@+id/webLink"
        android:layout_below="@id/helpText"
        android:layout_alignParentStart="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        android:textColor="#FF8080FF"
        android:text=""
        android:visibility="gone" />

    <TextView
        style="@style/SmallText"
        android:id="@+id/redisplayInfo"
        android:layout_below="@id/webLink"
        android:layout_alignParentStart="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        android:inputType="none"
        android:tag="help_redisplay"
        android:text="@string/help_redisplay" />

    <Button
        android:id="@+id/okButton"
        style="@style/NormalButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/redisplayInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:tag="button_ok"
        android:text="@string/button_ok" />

</RelativeLayout>
